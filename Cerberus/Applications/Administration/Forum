													echo ($_Application_Module_Message_Administration_Forum_TOPIC_UPDATED_SUCCESSFULLY);
} else {
													echo ($_Application_Module_Message_Administration_Forum_TOPIC_UPDATE_ERROR);
} // [ + ] IF_UPDATE_SQL

