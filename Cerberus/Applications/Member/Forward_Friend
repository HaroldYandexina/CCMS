*/

/*
 ================================================================
 + Application Module Header
 ================================================================
*/

												echo ($_Application_Module_Message_Member_Forward_Friend_Header);

/*
 ================================================================
 +
 + Send Electronic Mail Post Variables
 +
 ================================================================
*/

$_Application_Module_Member_Forward_Friend_POST_FORWARD_MESSAGE					= $_POST['forward_message'];
$_Application_Module_Member_Forward_Friend_POST_FORWARD_ELECTRONIC_MAIL_ADDRESS			= $_POST['forward_electronic_mail_address'];

/*
 ================================================================
 +
 + Send Electronic Mail Form
 +
 ================================================================
*/

if ((!$_Application_Module_Member_Forward_Friend_POST_FORWARD_MESSAGE) || (!$_Application_Module_Member_Forward_Friend_POST_FORWARD_ELECTRONIC_MAIL_ADDRESS)) {

echo ("
												<FORM ACTION=\"?$_INTERNAL_APPLICATION_MODULE_MEMBER&#61;Forward_Friend\" METHOD=\"post\">
													Electronic Mail Address:<BR>
														<INPUT TYPE=\"text\" NAME=\"forward_electronic_mail_address\" MAXLENGTH=\"250\"><BR>
													Electronic Mail Message:<BR>
														<TEXTAREA ROWS=\"15\" COLS=\"75\" NAME=\"forward_message\">Hey check this out! $_GLOBAL_HTTP_REFERRER</TEXTAREA><BR>
													<INPUT TYPE=\"submit\" VALUE=\"Send Electronic Mail Message\">
												</FORM>
");

} else {

/*
 ================================================================
 +
 + Send Electronic Mail Notification
 +
 ================================================================
*/

if (mail("$_Application_Module_Member_Forward_Friend_POST_FORWARD_ELECTRONIC_MAIL_ADDRESS","Message From :: $_GLOBAL_COOKIE_MEMBER_USERNAME ~ $_GLOBAL_SITE_TITLE","$_Application_Module_Member_Forward_Friend_POST_FORWARD_MESSAGE")) {

											echo ($_Application_Module_Message_Member_Forward_Friend_SEND_SUCCESSFUL);

} else {

											echo ($_Application_Module_Message_Member_Forward_Friend_SEND_ERROR);

} // [ + ] IF_MAIL

} // [ + ] IF_POST
