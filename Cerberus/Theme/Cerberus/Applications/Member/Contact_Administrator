/*
 ================================================================
 + Application Module Header
 ================================================================
*/
											echo ($_Application_Module_Message_Member_Contact_Administrator_Header);
/*
 ================================================================
 +
 + Form Post Variables
 +
 ================================================================
*/

$_Application_Module_Member_Contact_Administrator_POST_NAME 				= $_POST['post_send_name'];
$_Application_Module_Member_Contact_Administrator_POST_ELECTRONIC_MAIL_ADDRESS		= $_POST['post_send_electronic_mail_address'];
$_Application_Module_Member_Contact_Administrator_POST_MESSAGE				= $_POST['post_send_message'];

/*
 ================================================================
 +
 + Contact Administrator Form
 +
 ================================================================
*/

if ((!$_Application_Module_Member_Contact_Administrator_POST_NAME) || (!$_Application_Module_Member_Contact_Administrator_POST_MESSAGE) || (!$_Application_Module_Member_Contact_Administrator_POST_ELECTRONIC_MAIL_ADDRESS)) {

echo ("
												<FORM ACTION=\"?$_INTERNAL_APPLICATION_MODULE_MEMBER&#61;Contact_Admin\" METHOD=\"post\">
													* Your Full Name:<BR>
														<INPUT TYPE=\"text\" NAME=\"post_send_name\" VALUE=\"$_GLOBAL_COOKIE_MEMBER_USERNAME\"><BR>
													* Your Electronic Mail Address:<BR>
														<INPUT TYPE=\"text\" NAME=\"post_send_electronic_mail_address\"><BR>
													* Message:<BR>
														<TEXTAREA ROWS=\"15\" COLS=\"75\" NAME=\"post_send_message\"></TEXTAREA><BR>
													<INPUT TYPE=\"submit\" VALUE=\"Send Electronic Mail\">
												</FORM>
");

} else {

/*
 ================================================================
 +
 + Send Electronic Mail Notification
 +
 ================================================================
*/

if (mail($_ACCESS_ADMINISTRATOR_ELECTRONIC_MAIL,"Report From ~ $_GLOBAL_SITE_TITLE","
Dear $_ACCESS_ADMINISTRATOR_ELECTRONIC_MAIL,
=============================================================
[ $_Application_Module_Member_Contact_Administrator_POST_NAME | $_Application_Module_Member_Contact_Administrator_POST_ELECTRONIC_MAIL_ADDRESS ] has sent you this message from the Contact Services Administrator Module:

$_Application_Module_Member_Contact_Administrator_POST_MESSAGE

The Internet Protocol Address associated with the message is: [ $_GLOBAL_REMOTE_ADDRESS ] :: [ $_GLOBAL_COOKIE_MEMBER_USERNAME ]
=============================================================
Have a nice day,
		    - Cerberus Content Management System.
")) {

											echo ($_Application_Module_Message_Member_Contact_Administrator_MESSAGE_SENT);
} else {
											echo ($_Application_Module_Message_Member_Contact_Administrator_MESSAGE_SENT_ERROR);
} // [ + ] IF_MAIL

} // [ + ] IF_NULL
